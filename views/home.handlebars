<div class="container fluid">
  <div class="row">
    <div class="col-sm">
      <h1>Greeting</h1>
        <h3>What is your name?</h3>
        </div>
      </div>
    </div>
    </div>

    <div class="container fluid">
    <div class="row">
    <div class = "col-sm">
    <div class="errorOne">
    {{messages.errorOne}}
    </div>
    <i class="fas fa-language"></i>
    </div>
    </div>
    </div>


<form class="" action="/greetings" method="post">
  <div class="container fluid">
    <div class="row">
      <div class = "col-sm">
        <input type="text" name="theUsers" value="{{names}}" placeholder="Your name please..." class="nameText">
        </div>
        <input class="btn btn-outline-dark btn-sm" type="submit" value="Greet"></input>
      </div>
  </div>


  <div class="container fluid">
    <div class="row">
      <div class="col-sm">
      <h5>Language</h5>

      <label class="radio-inline">
        <input type="radio" name="LanguageType" class="LanguageTypeRadio" value="English">
        <span class="label-body">English</span>
      </label>

      <label class="radio-inline">
        <input type="radio" name="LanguageType" class="LanguageTypeRadio" value="Afrikaans">
        <span class="label-body" >Afrikaans</span>
      </label>

      <label class="radio-inline">
        <input type="radio" name="LanguageType" class="LanguageTypeRadio" value="isiXhosa">
        <span class="label-body">isiXhosa</span>
      </label>      
    </div>
  </div>
</div>
</form>

<div class="container fluid">
<div class="row">
<div class="col-sm">
<div class="errorTwo">
<span class="">{{messages.errorTwo}}</span>
</div>
</div>
</div>
</div>

<div class="row">
  <div class="col-md">
    <a href="/greeted"><button class="btn btn-outline-secondary border" type="button" name="button">Greeted People</button></a>     
    <a href="/reset"><button class="btn btn-outline-secondary border" type="submit" name="button">Reset</button></a>
</div>
</div>

<div class="col-md">
  <span id="bold">Count: {{count}}</span>  
</div>
    
